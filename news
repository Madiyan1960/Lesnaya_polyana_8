<body>
  <h1>Новости</h1>
  <div id="news-box">Загрузка новостей...</div>

  <script>
    const sheetId = "1XVEJ_tG_071vT5ARmQLjZimXeXLsgbsrMJNguCriSHc/edit?gid=0#gid=0";
    const sheetName = "Лист1";
    const url = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:json&sheet=${sheetName}`;

    fetch(url)
      .then(res => res.text())
      .then(text => {
        const json = JSON.parse(text.substr(47).slice(0, -2));
        const rows = json.table.rows;
        const newsBox = document.getElementById('news-box');
        newsBox.innerHTML = ""; // очистка

        rows.forEach(row => {
          const news = row.c.map(cell => cell?.v).join(" ");
          const p = document.createElement("p");
          p.textContent = news;
          newsBox.appendChild(p);
        });
      })
      .catch(err => {
        document.getElementById('news-box').textContent = "Ошибка загрузки новостей.";
        console.error("Ошибка:", err);
      });
  </script>
</body>
</html>
";
